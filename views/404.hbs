  #logo {
    height: inherit;
    width: inherit;
  }

  a {
    display: block;
    height: 150px;
    width: 150px;
    margin: 30px;
  }

  a:hover {
    -webkit-transform: scale(1.02, 1.02);
    -moz-transform: scale(1.02, 1.02);
    -ms-transform: scale(1.02, 1.02);
    -o-transform: scale(1.02, 1.02);
    transform: scale(1.02, 1.02);
    transition: 0.1s all;
  }

  #notice1 {
    font-weight: bold;
    font-size: 150px;
  }

  #notice2 {
    font-weight: bold;
    font-size: 44px;
  }

  #text {
    font-size: 17px;
    margin: 5px;
  }

  </style>

</head>
